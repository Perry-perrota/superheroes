{{#partial "title"}}Heroes{{/partial}}
{{#partial "content"}}
    <div class="row">
        <div class="col-md-4">
            <form action="/hero/new" method="post">

                <div class="form-group">
                    <label for="name">Hero Name</label>
                    <input type="text" class="form-control" name="name">
                </div>

                <div class="form-group">
                    <label for="strength">Special Power</label>
                    <input type="text" class="form-control" name="strength">
                </div>

                <div class="form-group">
                    <label for="weakness">Weakness</label>
                    <input type="text" class="form-control" name="weakness">
                </div>

                <div class="form-group">
                    <label for="Age">Age</label>
                    <input type="text" class="form-control" name="age">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Save Hero</button>

            </form>
        </div>
        <div class="col-md-4">
            {{#each heroes}}
                <div class="card">
                    <img class="card-img-top" src="/images/download.png" alt="Hero Image">
                    <div class="card-body">
                        <h5 class="card-title">Hero Name is: {{name}}</h5>
                        <p class="card-text">Strength: {{strength}}</p>
                        <p class="card-text">Weakness: {{weakness}}</p>
                        <p class="card-text">Age: {{age}}</p>
                        <a class="btn btn-primary" href="/squads/add/hero" name="heroId" value="{{id}}">Add to Squad</a>
                        <a class="btn btn-primary" href="/allSquads" >View Squads</a>
                        </form>

                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/partial}}
{{>layout.hbs}}